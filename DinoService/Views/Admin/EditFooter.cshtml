@model Footer
@{
    ViewData["Title"] = "Edit Footer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post" asp-action="UpdateFooter" asp-controller="Admin">
    <input type="hidden" value="@Model.Id" name="id" />
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="title" value="@Model.Title" required />
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="address" value="@Model.Address" required />
    </div>

    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" class="form-control" id="Phone" name="phone" value="@Model.Phone" required />
    </div>

    <div class="form-group">
        <label for="Mail">Mail</label>
        <input type="email" class="form-control" id="Mail" name="mail" value="@Model.Mail" required />
    </div>

    <div class="form-group">
        <label for="BottomText">Bottom Text</label>
        <textarea class="form-control" id="BottomText" name="bottomText" rows="4" required>@Model.BottomText</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
